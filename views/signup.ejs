<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <link rel="stylesheet" href="signup.css">
</head>
<body>
  <div class="signup-container">
    <h1>Sign Up</h1>
    <form action="/signup" method="post" id="signupForm">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" required>
      <p id="userExistsMessage" style="display: none;">Username already exists!</p>

      <% if (userExists) { %>
      <script>
        // Function to show the message in red
        function showUserExistsMessage() {
            const messageElement = document.getElementById('userExistsMessage');
            messageElement.style.display = 'block'; // Make it visible
            messageElement.style.color = 'red'; // Change text color to red
        }
    
        // Example usage (trigger this when the user already exists)
        showUserExistsMessage();
    </script>
    <%}%>



      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>

      <p id="emailExistsMessage" style="display: none;">Email already exists!</p>

      <% if (emailExists) { %>
        <script>
          // Function to show the message in red
          function showEmailExistsMessage() {
              const messageElement = document.getElementById('emailExistsMessage');
              messageElement.style.display = 'block'; // Make it visible
              messageElement.style.color = 'red'; // Change text color to red
          }
      
          // Example usage (trigger this when the user already exists)
          showEmailExistsMessage();
      </script>
      <%}%>
      
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
      
      <label for="confirmPassword">Confirm Password:</label>  
      <input type="password" id="confirmPassword" name="confirmPassword" required>


      <button type="submit">Sign Up</button>
    </form>
    <p id="responseMessage"></p>
  </div>
</body>
</html>
